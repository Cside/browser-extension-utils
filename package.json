{
  "name": "@cside/browser-extension-utils",
  "version": "0.0.7",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "open-store-pages": "./dist/bin/openStorePages.js",
    "open-submission-pages": "./dist/bin/openSubmissionPages.js",
    "switch-locale": "./bin/switch-locale.sh"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "./dist/",
    "./bin/"
  ],
  "sideEffects": false,
  "license": "MIT",
  "scripts": {
    "build": "tsup && rm -f ./dist/*.d.cts dist/bin/*.{d.ts,d.cts,cjs}",
    "watch": "tsup --watch",
    "lint:prettier": "prettier --check .",
    "fix:prettier": "prettier --write .",
    "lint:eslint": "eslint --max-warnings 0 ./src",
    "fix:eslint": "eslint --fix ./src",
    "lint": "run-p -c lint:*",
    "fix": "run-p -c fix:*",
    "test": "vitest --run",
    "check:type": "tsc --noEmit",
    "check-all": "run-p -c lint test check:*"
  },
  "devDependencies": {
    "@tsconfig/strictest": "^2.0.2",
    "@types/chrome": "^0.0.246",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.6.0",
    "@typescript-eslint/typescript-estree": "^6.9.1",
    "can-npm-publish": "^1.3.6",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.4.2",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "dependencies": {
    "colorette": "^2.0.20",
    "open": "^9.1.0",
    "zod": "^3.22.2"
  }
}
