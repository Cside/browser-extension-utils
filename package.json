{
  "name": "browser-extension-utils",
  "version": "0.0.2",
  "main": "./lib/index.js",
  "type": "module",
  "bin": {
    "open-store-pages": "./bin/open-store-pages.js",
    "open-submission-pages": "./bin/open-submission-pages.js",
    "switch-locale": "./bin/switch-locale.sh"
  },
  "module": "./module/index.js",
  "exports": {
    "require": "./lib/index.js",
    "import": "./module/index.js",
    "default": "./lib/index.js"
  },
  "types": "lib/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "printf 'build\\ncommonjs' | xargs -P 2 -L 1 -I{} npx tsc -p ./tsconfig.{}.json",
    "watch": "printf 'build\\ncommonjs' | xargs -P 2 -L 1 -I{} npx tsc -w -p ./tsconfig.{}.json",
    "build:bin": "tsc -p ./tsconfig.bin.json",
    "watch:bin": "tsc -w -p ./tsconfig.bin.json",
    "clean": "rm -rf lib module",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "lint:prettier": "prettier --check .",
    "fix:prettier": "prettier --write .",
    "lint:eslint": "eslint --max-warnings 0 --ext .js,.ts ./src ./binSrc",
    "fix:eslint": "eslint --fix --ext .js,.ts ./src ./binSrc",
    "lint": "run-p -c lint:*",
    "fix": "run-p -c fix:*",
    "test": "vitest --run",
    "check:type": "printf 'build\\nbin' | xargs -P 2 -L 1 -I{} npx tsc --noEmit -p ./tsconfig.{}.json"
  },
  "devDependencies": {
    "@tsconfig/strictest": "^2.0.2",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "@typescript-eslint/typescript-estree": "^6.6.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vitest": "^0.34.3"
  },
  "dependencies": {
    "colorette": "^2.0.20",
    "open": "^9.1.0",
    "zod": "^3.22.2"
  }
}
